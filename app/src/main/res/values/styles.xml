<resources>
    <style name="BlueTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/blue</item>
        <item name="shapeAppearanceOverlay">@style/BlueShapeAppearance</item>
    </style>

    <style name="BlueShapeAppearance" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="strokeColor">@color/blue</item>
    </style>


    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/teal_200</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>
